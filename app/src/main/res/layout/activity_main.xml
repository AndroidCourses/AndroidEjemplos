<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnUploadPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="UploadPhoto"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnExpandableActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Expandable Activity"
            android:layout_margin="8dp"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnExpandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Expandable ListView"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnMainNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Main Navigation "
            android:layout_margin="8dp"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnRCLItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RCL ItemView"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnRCLView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RCL View"
            android:layout_margin="8dp"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View Pager"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>